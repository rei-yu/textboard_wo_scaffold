<%= form_for([@my_thread, @my_comment]) do |f| %>
	<% if @my_comment.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@my_comment.errors.count, "error") %>
				prohibited this comment from being saved:</h2>

			<ul>
				<% @my_comment.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :pen_name %><br>
		<%= f.text_field :pen_name %>
		<br>
		<%= f.label :comment %><br>
		<%= f.text_field :comment %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>